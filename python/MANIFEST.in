include README.md
include LICENSE
recursive-include pyfwht *.py *.pyi
recursive-include src *.cpp *.h

# Include parent library sources (will be in sdist)
graft ../include
graft ../src

# Exclude build artifacts and cache
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
global-exclude *.o
global-exclude .DS_Store
prune build
prune dist
prune *.egg-info
prune c_src
